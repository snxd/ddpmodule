root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,xml}]
charset = utf-8
insert_final_newline = false
indent_size = 4

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/
[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
